@model db_1.Models.Nota

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar Nota</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nota1" class="control-label"></label>
                <input asp-for="Nota1" class="form-control" />
                <span asp-validation-for="Nota1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ponderacion" class="control-label"></label>
                <input asp-for="Ponderacion" class="form-control" />
                <span asp-validation-for="Ponderacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstudianteId" class="control-label"></label>
                <select asp-for="EstudianteId" class ="form-control" asp-items="ViewBag.EstudianteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AsignaturaId" class="control-label"></label>
                <select asp-for="AsignaturaId" class ="form-control" asp-items="ViewBag.AsignaturaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
